{
  "name": "clipsense",
  "version": "1.0.0",
  "description": "Intelligent clipboard manager with AI-powered content analysis",
  "main": "out/main/main.js",
  "author": "ClipSense Team",
  "license": "MIT",
  "homepage": "https://github.com/clipsense/clipsense",
  "repository": {
    "type": "git",
    "url": "https://github.com/clipsense/clipsense.git"
  },
  "keywords": [
    "clipboard",
    "manager",
    "ai",
    "productivity",
    "electron",
    "cross-platform"
  ],
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "app:dev": "npm run build && electron .",
    "app:dir": "npm run build && electron-builder --dir",
    "app:dist": "npm run build && electron-builder",
    "release:win": "npm run build && electron-builder --win --publish=never",
    "release:mac": "npm run build && electron-builder --mac --publish=never", 
    "release:linux": "npm run build && electron-builder --linux --publish=never",
    "release:all": "npm run build && electron-builder --win --mac --linux --publish=never",
    "release:win:publish": "npm run build && electron-builder --win --publish=always",
    "release:mac:publish": "npm run build && electron-builder --mac --publish=always", 
    "release:linux:publish": "npm run build && electron-builder --linux --publish=always",
    "release:all:publish": "npm run build && electron-builder --win --mac --linux --publish=always",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "better-sqlite3": "^9.0.0",
    "clsx": "^2.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "framer-motion": "^10.16.0",
    "fuse.js": "^7.0.0",
    "highlight.js": "^11.9.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "tailwind-merge": "^2.0.0",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/crypto-js": "^4.2.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@types/validator": "^13.11.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "electron-vite": "^3.1.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.clipsense.app",
    "productName": "ClipSense",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "out/main/main.js"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ],
      "artifactName": "ClipSense-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "ClipSense-${version}-win-${arch}.${ext}"
    },
    "linux": {
      "icon": "resources/icon.png",
      "target": [
        {
          "target": "AppImage", 
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "artifactName": "ClipSense-${version}-linux-${arch}.${ext}",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "meliem",
      "repo": "clipsense"
    }
  }
}
